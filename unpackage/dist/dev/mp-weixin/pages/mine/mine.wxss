.mine {
  width: 100%;
  height: 100%;
  overflow: auto;
}
.mine .user {
  width: 100%;
  height: 420rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: tomato;
}
.mine .user .nickname {
  color: #fff;
  font-weight: 700;
  margin-top: 25rpx;
}
.mine .user > image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 60rpx;
}
.mine .user .desc {
  display: flex;
  margin-top: 20rpx;
}
.mine .user .desc .desc_tag {
  color: #cfc4c4;
  font-size: 14px;
  display: flex;
  align-items: center;
  font-size: 14px;
  margin: 0 10px;
}
.mine .user .desc .desc_tag text {
  font-weight: 700;
  color: #fff;
  margin-right: 10px;
}
.mine .main {
  width: 100%;
}
.mine .main .lists {
  width: 100%;
}
.mine .main .lists .list {
  display: flex;
  padding: 24rpx 30rpx;
  position: relative;
}
.mine .main .lists .list::before {
  content: "";
  position: absolute;
  width: 200%;
  height: 200%;
  top: 0;
  left: 0;
  border-bottom: 1px solid #999;
  transform: scale(0.5);
  transform-origin: 0 0;
  box-sizing: border-box;
}
.mine .main .lists .list .pic {
  width: 80rpx;
  height: 80rpx;
  margin-right: 36rpx;
}
.mine .main .lists .list .pic image {
  width: 100%;
  height: 100%;
}
.mine .main .lists .list .list_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.mine .main .lists .list .list_item .listName {
  font-size: 28rpx;
  color: #3b4144;
}
.mine .main .lists .list .list_item .rec {
  color: #999;
  font-size: 12px;
}